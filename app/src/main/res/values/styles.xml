<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/themeColorPrimary</item>
        <item name="colorPrimaryDark">@color/themeColorPrimaryDark</item>
        <item name="colorAccent">@color/themeColorPrimary</item>
        <item name="colorSecondary">@color/themeColorPrimary</item>
        <item name="colorOnSecondary">#fff</item>
        <item name="colorControlNormal">#555</item>
        <item name="colorControlActivated">@color/themeColorPrimaryAlpha</item>
        <item name="colorControlHighlight">@color/themeColorPrimaryAlpha</item>
        <item name="colorOnBackground">@color/textColor</item>
        <item name="colorSurface">@color/backgroundColor</item>
        <item name="colorOnSurface">@color/textColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ViewPagerTitleStyle" parent="AppTheme">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@color/themeColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColor</item>
    </style>

    <style name="CalendarDialogStyle" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/themeColorPrimary</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/themeColorPrimary</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">@style/ButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle" tools:targetApi="lollipop">@style/ButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/themeColorPrimary</item>
    </style>
</resources>
