<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/zermeloTitle"
                    android:layout_marginBottom="5dp"
                    android:text="Zermelo sychronisatie"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zermeloSyncLayout"
                android:layout_below="@+id/zermeloTitle">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vul hier een Zermelo 'Link App' code in om te synchroniseren met Zermelo:"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/zermeloText"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/zermeloCode"
                    android:layout_below="@+id/zermeloText"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zermeloCode"
                    android:id="@+id/zermeloConfirm"
                    android:text="Ok"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waar is deze code?"
                    android:layout_below="@+id/zermeloCode"
                    android:layout_toRightOf="@+id/zermeloConfirm"
                    android:layout_toEndOf="@+id/zermeloConfirm"
                    android:layout_marginTop="3dp"
                    android:id="@+id/zermeloCodeHelp"
                    android:textColor="#004bff" />
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zermeloSyncLayout"
                android:id="@+id/zermeloForceSync"
                android:layout_marginTop="-1dp"
                android:text="Forceer synchronisatie"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="2px"
                android:id="@+id/divider"
                android:background="#000000"
                android:layout_below="@id/zermeloForceSync"
                android:layout_marginBottom="5dp" />






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/settingsTitle"
                android:text="Instellingen"
                android:layout_below="@id/divider"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginTop="5dp"
                android:id="@+id/showNotificationCheckbox"
                android:layout_below="@id/settingsTitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geef meldingen van lesuren"
                android:id="@+id/showNotificationText"
                android:layout_toRightOf="@+id/showNotificationCheckbox"
                android:layout_alignBaseline="@+id/showNotificationCheckbox"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:id="@+id/showCancelledNotificationCheckbox"
                android:layout_below="@id/showNotificationCheckbox"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geef meldingen van uitval"
                android:id="@+id/showCancelledNotificationText"
                android:layout_toRightOf="@+id/showCancelledNotificationCheckbox"
                android:layout_alignBaseline="@+id/showCancelledNotificationCheckbox"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:id="@+id/showGroupCheckbox"
                android:layout_below="@id/showCancelledNotificationCheckbox"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laat clusters/klassen zien (voor leraren)"
                android:id="@+id/showGroupText"
                android:layout_toRightOf="@+id/showGroupCheckbox"
                android:layout_alignBaseline="@+id/showGroupCheckbox"
                android:paddingBottom="5dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:id="@+id/divider1"
                android:background="#000000"
                android:layout_below="@id/showGroupCheckbox"
                android:layout_marginTop="3dp" />








            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/scheduleTitle"
                android:layout_marginTop="5dp"
                android:layout_below="@id/divider1"
                android:text="Rooster"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Maandag"
                android:id="@+id/dayText"
                android:layout_below="@+id/scheduleTitle"
                android:paddingTop="5dp" />
            <Button
                android:minHeight="0dp" android:minWidth="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prevDay"
                android:text="&lt;"
                android:layout_below="@id/dayText"/>
            <Button
                android:minHeight="0dp" android:minWidth="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nextDay"
                android:text="&gt;"
                android:layout_alignBaseline="@id/prevDay"
                android:layout_toRightOf="@id/prevDay"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/prevDay"
                android:id="@+id/dayListView">
            </ListView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
